<html>

  <head>
      <title>
          <%= tittle %>
      </title>
      
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
      <link rel="stylesheet" href="style.css"
  </head>
  <script src=" https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  <body>
    <section class="container">
          <h2 align="center">To Do List</h2>
          <form action="/create-task" method="POST">

              <table class="table">
                  <thead>
                    <tr class="table-active">
                      <th >Add Task</th>
                      <th >Category</th>
                      <th >Due Date</th>
                      <th ></th>
                    </tr>
                  </thead>
              
              
                  <tbody>
                      <tr>
                        <td> <input type="text" name="description"placeholder="Enter the pending task" required></input></th>
                        <td >  <select name="category" required>

                          <option>Personal</option>
                          <option>Work</option>
                          <option>School</option>
                          <option>Cleaning</option>
                          <option>Other</option>

                      </select></th>
                        <td > <input type="date" name="date" required></th>
                        <td ><input type="submit"  class="btn btn-primary"id="add" value="Add"></th>
                      </tr>
                  </tbody>
              </table>          
          </form>
      </section>
      <div>          
          <h2 align="center">Tasks</h2>

          <form action="/delete-task" method="GET">
              <table class="table">
                  <thead>
                      <tr align="center">
                        <th>Select</th>
                        <th>Task</th>
                        <th>Category</th>
                      <th>Due Date</th>
                      </tr>
                    </thead>
                  <% for(let i of task) { %>
                      <tr align="center">
                          <td style="background-color: rgb(228, 250, 255);"> <input type="checkbox" name="<%= i._id %>" ></td>
                          <td style="background-color: rgb(228, 250, 255);"> <p id="task-description"><%= i.description %></td>
                          <td style="background-color: rgb(228, 250, 255);"><p id="task-category"></p><%= i.category %></td>
                          <td style="background-color: rgb(228, 250, 255);"><p id="due-date">: <%= i.date %></p></td>
                      </tr>
                  <% } %>
              </table>
                  
      <div  align = "center"><input type="submit" class="btn btn-danger" value="Delete"></div>></form>
      </div>
  </body>
  
</html>